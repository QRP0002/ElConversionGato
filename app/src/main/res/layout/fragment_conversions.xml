<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="fragments.tabs.SpeedFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:text="@string/do_tv"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_type_spinner"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">
    </Spinner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/from_tv"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"/>

        <Spinner
            android:id="@+id/first_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
        </Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/to_tv"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"/>

        <Spinner
            android:id="@+id/second_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
        </Spinner>
    </LinearLayout>

    <EditText
        android:id="@+id/conversion_input_et"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/conversion_tv"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conversion_output_tv"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"/>

</LinearLayout>
