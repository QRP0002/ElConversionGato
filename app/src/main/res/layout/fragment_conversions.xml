<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="fragments.tabs.ConversionFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryOrange"
        android:paddingTop="40dp"
        android:text="@string/do_tv"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_type_spinner"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">
    </Spinner>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:paddingTop="40dp"
        android:paddingBottom="20dp"
        android:background="@color/colorPrimaryOrange"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/from_text_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryOrange"
            android:text="@string/from_tv"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"/>

        <Spinner
            android:id="@+id/first_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="center"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="40dp">
        </Spinner>


        <TextView
            android:id="@+id/to_text_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryOrange"
            android:text="@string/to_tv"
            android:layout_marginTop="40dp"
            android:layout_alignStart="@+id/from_text_view_id"
            android:layout_below="@+id/from_text_view_id"/>

        <Spinner
            android:id="@+id/second_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_spinner"
            android:layout_marginTop="40dp"
            android:layout_alignStart="@+id/first_spinner"
            android:textAlignment="center"
            android:paddingBottom="40dp">
        </Spinner>


    </RelativeLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false">
        <EditText
            android:id="@+id/conversion_input_et"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:hint="@string/enter_value_hint"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/output_header_str_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimaryOrange"
        android:paddingTop="40dp"
        android:textSize="18sp"
        android:paddingBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conversion_output_tv"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:paddingBottom="20dp"/>

</LinearLayout>
